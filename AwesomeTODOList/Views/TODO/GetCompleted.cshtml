@model List<AwesomeTODOList.Models.TODOItem>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="@Url.Content("~/www/favicon.ico")">

    <title>Dashboard Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/www/dist/css/bootstrap.min.css")" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/www/dashboard.css")" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Awesome Task List</a>
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="#">Login</a>
            </li>
        </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                All Tasks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Incomplete Tasks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Completed Tasks
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>



            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <h2>All tasks</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th colspan="5">
                                    <a href="/Dashboard/Create">Create task</a>
                                </th>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Due date</th>
                                <th>Completed</th>
                                <td>Actions</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                string cssClass;

                                if (item.IsCompleted)
                                {
                                    cssClass = "table-success";
                                }
                                else
                                {
                                    cssClass = "table-active";
                                }
                                <tr class="@cssClass">
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.DueDate</td>
                                    <td>@item.IsCompleted</td>
                                    <td>
                                        <a href="#">Edit</a> |
                                        <a href="#">Delete</a> |
                                        <a href="#">Complete</a>
                                    </td>
                                </tr>
                            }
                            @*<tr class="table-active">
                                    <td>Wash the car.</td>
                                    <td></td>
                                    <td>25/11/2018 12:00:00 πμ</td>
                                    <td>False</td>
                                    <td>
                                        <a href="#">Edit</a> |
                                        <a href="#">Delete</a> |
                                        <a href="#">Complete</a>
                                    </td>
                                </tr>
                                <tr class="table-success">
                                    <td>Prepare MVC exercise - example.</td>
                                    <td></td>
                                    <td></td>
                                    <td>True</td>
                                    <td>
                                        <a href="#">Edit</a> |
                                        <a href="#">Delete</a> |
                                        <a href="#">Complete</a>
                                    </td>
                                </tr>*@
                            <!-- On rows -->
                            <!-- On cells (`td` or `th`) -->

                        </tbody>
                    </table>
                </div>
            </main>


        </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/www/assets/js/popper.min.js")"></script>
    <script src="@Url.Content("~/www/dist/js/bootstrap.min.js")"></script>
</body>
</html>

