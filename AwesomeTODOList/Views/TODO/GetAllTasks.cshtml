@model IEnumerable<AwesomeTODOList.Models.TODOItem>

<p>@TempData["Message"]</p>
<h2>All tasks</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th colspan="5">
                    <a href="@Url.Action("Create", "TODO")">Create task</a>
                </th>
            </tr>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due date</th>
                <th>Completed</th>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                string cssClass;

                if (item.IsCompleted)
                {
                    cssClass = "table-success";
                }
                else
                {
                    cssClass = "table-active";
                }
                <tr class="@cssClass">
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.DueDate</td>
                    <td>@item.IsCompleted</td>
                    <td>
                        <a href="@Url.Action("Edit", "TODO", new { id = item.Id})">Edit</a> |
                        <a href="#">Delete</a> |
                        <a href="#">Complete</a>
                    </td>
                </tr>
            }
